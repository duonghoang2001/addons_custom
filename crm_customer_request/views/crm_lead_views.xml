<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_customer_request_crm_lead_view_form_inherit" model="ir.ui.view">
            <field name="name">crm_customer_request_crm_lead_view_form_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page string="Opportunity" name="opportunity">
                        <form string="Requests">
                            <field name="is_new_stage" invisible="1"/>
                            <field name="request_ids" 
                                context="{'request': 'crm_customer_request'}" 
                                attrs="{'readonly':[('is_new_stage','=',False)]}"
                                widget="one2many"
                                />
                            <div class="o_row" attrs="{'invisible':[('is_new_stage','=',False)]}">
                                <p>Or add new lines via Excel file:</p>
                                <button name="download_template" string="Download Template" type="object" class="oe_link oe_right"/>
                                <field name="excel_file_name" invisible="1"/>
                                <field name="excel_file" filename="excel_file_name"/>
                                <button name="import_excels" string="Import" type="object" class="oe_highlight" />
                            </div>
                            <div>
                                <span><strong>Total Sale: </strong></span>
                                <field name="total_sale"/>
                            </div>
                            <div>
                                <span><strong>Total Expected Revenue: </strong></span>
                                <field name="total_expected_revenue"/>
                            </div>   
                            <field name="comment" widget="new_widget"/> 
                        </form>
                    </page>
                </xpath>
                <xpath expr="//button[@name='%(crm.crm_lead_lost_action)d']" position="after">
                    <button string="Export Requests" name="download_requests" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page string="Product Sets" name="product_sets">
                        <form>
                            <field name="product_set_ids"
                                context="{'set': 'product_set'}"/>
                        </form>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Customer Requests Menu -->
        <record id="crm_lead_action_customer_request" model="ir.actions.act_window">
            <field name="name">Customer Requests</field>
            <field name="res_model">crm.customer.request</field>
            <field name="view_mode">tree,kanban,graph,pivot,form</field>
            <field name="view_id" ref="crm_customer_request.crm_customer_request_tree_view"/>
            <field name="domain">[('opportunity_id','!=',False)]</field>
            <field name="search_view_id" ref="crm_customer_request.crm_customer_request_search_view"/>
            <field name="context">{
                    'search_default_assigned_to_me': 1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Looks like there is no request.
                </p><p>
                    Create customer requests for the opportunity.
                </p>
            </field>
        </record>
        <record id="crm_lead_action_customer_request_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_customer_request.crm_customer_request_tree_view"/>
            <field name="act_window_id" ref="crm_lead_action_customer_request"/>
        </record>
    </data>
</odoo>
